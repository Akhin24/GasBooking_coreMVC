@model GasBooking_coreMVC.Models.StaffInsert
<form asp-action="staffinserT_CLICK" class="form-horizondal" method="post">
    <div class="form-group">
        <label class="control-label">Staff Name</label>
        <input asp-for="sname" class="form-control" id="t1" />
    </div>
    <div class="form-group">
        <label class="control-label">Staff phone</label>
        <input asp-for="sphone" class="form-control" id="t2" />
    </div>
    <div class="form-group">
        <label class="control-label">Staff Email</label>
        <input asp-for="semail" class="form-control" id="t3" />
    </div>
   
    <div class="form-group">
        <label class="control-label">Username</label>
        <input asp-for="uname" class="form-control" id="t4" />
    </div>
    <div class="form-group">
        <label class="control-label">Password</label>
        <input asp-for="pass" class="form-control" id="t5" />
    </div>


    <div class="form-group">
        <input type="submit" value="Insert" class="btn btn-success" />
    </div>
</form>
@{
    if (@TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
            document.getElementById("t1").value="";
            document.getElementById("t2").value="";
            document.getElementById("t3").value="";
            document.getElementById("t4").value="";
            document.getElementById("t5").value="";
        </script>
    }

}