@model IEnumerable< GasBooking_coreMVC.Models.booked_detailsClass>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div>
    @Html.ActionLink("Book Cylinder", "book_pageload", "cylinderbooking", null, new { @class = "btn btn-primary", title = "Click to book a cylinder", id = "book-cylinder-link" })
</div>

<br />
<h1 class="alert-primary">BOOKING DETAILS</h1>
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>CYLINDER ID</th>
                <th>CUSTOMER ID</th>
                <th>CONSUMER NUMBER</th>
                <th>STAFF ID</th>
                <th>TOTAL AMOUNT</th>
                <th>DATE OF BOOKING</th>
                <th>BOOKING MODE</th>
                <th>STATUS</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.bid</td>
                    <td>@customer.clyid</td>
                    <td>@customer.cusid</td>
                    <td>@customer.consnum</td>
                    <td>@customer.stfid</td>
                    <td>@customer.amount</td>
                    <td>@customer.date</td>
                    <td>@customer.bokmode</td>
                    <td>@customer.sts</td>
                    <td>
                        @using (Html.BeginForm("Cancel_detail_pageload", "Cancel", new { id = customer.bid }, FormMethod.Post))
                        {
                            <button class="btn btn-success btn-xs" type="submit">
                                CancelBooking
                            </button>
                        }

                    </td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
    <p>No Records found</p>
}

